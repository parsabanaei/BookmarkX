{
  "manifest_version": 3,
  "name": "BookmarkX",
  "version": "1.0",
  "description": "Advanced bookmark manager with powerful search and filtering capabilities",
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open BookmarkX Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["manager.html", "css/*", "js/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
